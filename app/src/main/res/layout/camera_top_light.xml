<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/container"
    android:padding="15dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/light_automatic"
        android:scaleType="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/wb_automatic_selector"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/light_incandescent"
        android:scaleType="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/wb_incandescent_selector"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/light_fluores"
        android:scaleType="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/wb_fluores_selector"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/light_daylight"
        android:scaleType="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/wb_daylight_selector"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/light_overcast"
        android:scaleType="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/wb_overcast_selector"
        android:layout_height="match_parent" />

</LinearLayout>