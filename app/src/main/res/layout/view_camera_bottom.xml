<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/ib_video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/selector_video" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_shutter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/shutter_button_selector" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/selector_shutter"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>


    <com.example.administrator.mycamera.view.buttonview.CircleImageView
        android:id="@+id/ib_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:border_width="1dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/icon_photo_error" />

</LinearLayout>