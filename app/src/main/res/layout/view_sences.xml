<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <RadioGroup
        android:id="@+id/rg_scenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/scenes_close_selector"
            android:gravity="center"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/rb_sport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/scenes_sport_selector"
            android:gravity="center"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/rb_party"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/scenes_party_selector"
            android:gravity="center"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/rb_sunset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/scenes_sunset_selector"
            android:gravity="center"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/rb_night"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/scenes_night_selector"
            android:gravity="center_vertical"
            android:textSize="0sp" />
    </RadioGroup>

